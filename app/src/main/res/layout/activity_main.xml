<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <!--
    <com.example.lore_f.cameracontrol.CameraPreview
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/MainActivity_mainLabel"
        android:id="@+id/textView"
        android:textAlignment="center" />

    <SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera_preview"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainActivity_buttonStartCapture"
        android:id="@+id/BTN___MAIN___STARTCAPTURE"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainActivity_buttonTakeShot"
        android:id="@+id/BTN___MAIN___TAKESHOT"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
